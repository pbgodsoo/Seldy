<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbeecd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/prev_btn"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/c2"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/register_border_solid"
        android:layout_marginTop="7dp" />
    <ScrollView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#484848"
                    android:textAlignment="center"
                    android:text="Sign Up"
                    android:textSize="22sp"
                    android:fontFamily="@font/bmjua"
                    android:layout_marginBottom="5dp"
                    />
                <EditText
                    android:id="@+id/register_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="이름"
                    android:background="@drawable/register_border_radius"
                    android:fontFamily="@font/malangmalangb"
                    android:padding="10dp"
                    android:textColorHint="#BFBFBF"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/malangmalangb"
                    android:layout_marginTop="5dp"
                    android:textColor="#484848"
                    android:textSize="20sp"
                    android:text=""/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/register_id"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="아이디 (E-mail)"
                        android:padding="10dp"
                        android:textColorHint="#BFBFBF"
                        android:background="@drawable/register_border_radius"
                        android:textColor="#000"
                        android:fontFamily="@font/malangmalangb"/>
                    <Button
                        android:id="@+id/email_check"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sign_up_back"
                        android:textColor="#484848"
                        android:layout_weight="3"
                        android:fontFamily="@font/bmjua"
                        android:layout_marginLeft="3dp"
                        android:text="인증"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_border_radius">
                    <EditText
                        android:id="@+id/email_check_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:hint="인증코드"
                        android:textColorHint="#BFBFBF"
                        android:padding="10dp"
                        android:fontFamily="@font/malangmalangb"/>
                    <ImageView
                        android:id="@+id/email_check_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="5"
                        android:layout_gravity="center" />
                </LinearLayout>
                <TextView
                    android:id="@+id/code_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/malangmalangb"
                    android:layout_marginTop="5dp"
                    android:textColor="#484848"
                    android:textSize="15sp"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_border_radius">
                    <EditText
                        android:id="@+id/register_nickname"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="닉네임"
                        android:maxLength="20"
                        android:padding="10dp"
                        android:background="#00000000"
                        android:textColorHint="#BFBFBF"
                        android:textColor="#000"
                        android:fontFamily="@font/malangmalangb"/>
                    <ImageView
                        android:id="@+id/nikname_check_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="5"
                        android:layout_gravity="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nickname_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/malangmalangb"
                    android:layout_marginTop="5dp"
                    android:textColor="#484848"
                    android:textSize="15sp"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register_border_radius">
                    <EditText
                        android:id="@+id/register_pw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:hint="비밀번호"
                        android:maxLength="16"
                        android:textColorHint="#BFBFBF"
                        android:padding="10dp"
                        android:fontFamily="@font/malangmalangb"/>
                    <ImageView
                        android:id="@+id/pw_check_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="5"
                        android:layout_gravity="center" />
                </LinearLayout>

                <TextView
                    android:id="@+id/pw_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/malangmalangb"
                    android:layout_marginTop="5dp"
                    android:textColor="#484848"
                    android:textSize="15sp"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_border_radius"
                    android:layout_marginTop="5dp">
                    <EditText
                        android:id="@+id/register_pwc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:layout_weight="1"
                        android:hint="비밀번호 재입력"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:maxLength="16"
                        android:background="#00000000"
                        android:textColorHint="#BFBFBF"
                        android:textColor="#000"
                        android:fontFamily="@font/malangmalangb"/>
                    <ImageView
                        android:id="@+id/pwc_check_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="5"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- 비밀번호 같은지 확인-->
                <TextView
                    android:id="@+id/pwc_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/malangmalangb"
                    android:layout_marginTop="5dp"
                    android:textColor="#484848"
                    android:textSize="15sp"
                    android:text=""/>
                <Button
                    android:id="@+id/signUp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up_back"
                    android:textColor="#484848"
                    android:text="Sign Up"
                    android:fontFamily="@font/bmjua"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>