<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="300dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/login_id_wrap"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:background="@drawable/b2">

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/b3" />
                <EditText
                    android:id="@+id/login_id"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/hancom_gothic_regular"
                    android:hint="E-mail address"
                    android:layout_toRightOf="@id/email_icon"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#D5D5D5"
                    android:background="#00000000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/login_pw_wrap"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/b2"
                android:layout_marginTop="25dp">
                <ImageView
                    android:id="@+id/pw_icon"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/b4" />
                <EditText
                    android:id="@+id/login_pw"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:hint="Password"
                    android:fontFamily="@font/hancom_gothic_regular"
                    android:layout_toRightOf="@id/pw_icon"
                    android:inputType="textPassword"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#D5D5D5"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/auto_login_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/hancom_gothic_regular"
                    android:text="자동로그인"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="115dp"
                android:layout_marginTop="20dp"
                android:paddingRight="115dp">

                <ImageView
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/b7"/>

                <TextView
                    android:id="@+id/find_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/hancom_gothic_regular"
                    android:text="Forgot password?"
                    android:textAlignment="center"
                    android:textColor="#D5D5D5"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_border_solid"
                    android:textSize="0dp" />

                <TextView
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/hancom_gothic_regular"
                    android:text="New here? sign up"
                    android:textAlignment="center"
                    android:textColor="#D5D5D5"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>